	.TITLE	MINTEST - Minimal Terminal I/O Test
	.IDENT	/V1.0/
;
;	Minimal test: print message, wait for key, repeat
;
	.ASECT
	.=1000

START:	MOV	#MSG1,R1	; Point to message
10$:	MOVB	(R1)+,R0	; Get char
	BEQ	20$		; Done with string
	EMT	341		; .TTYOUT
	BR	10$

20$:	; Print CRLF
	MOV	#15,R0		; CR
	EMT	341
	MOV	#12,R0		; LF
	EMT	341

	; Wait for a key
	EMT	340		; .TTYIN

	; Print the key back
	EMT	341		; Echo it

	; Loop back
	BR	START

MSG1:	.ASCII	/MINTEST: Press any key/
	.BYTE	0

	.END	START
