	.TITLE	IOLIB - I/O Library Routines
	.IDENT	/V1.0/
;
;	I/O Library routines for HEXBIN/BINHEX
;	Edward Hibbert - December 2025
;

	.PSECT	CODE

; FIRQB and XRB locations
FIRQB	= 402
XRB	= 442

	.GLOBL	$ZAPFQB

; $ZAPFQB - Zero out the FIRQB area (16 bytes)
$ZAPFQB:
	MOV	R0,-(SP)
	MOV	R1,-(SP)
	MOV	#FIRQB,R0
	MOV	#20,R1		; 16 bytes / 8 words
1$:	CLR	(R0)+
	SOB	R1,1$
	MOV	(SP)+,R1
	MOV	(SP)+,R0
	RTS	PC

	.END
